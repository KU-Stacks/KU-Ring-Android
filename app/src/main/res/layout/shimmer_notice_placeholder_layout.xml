<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="9dp">

    <TextView
        android:id="@+id/notice_shimmer_subject_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/kus_gray"
        android:textSize="15sp"
        android:lines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice_shimmer_category_txt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:background="@color/kus_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice_shimmer_subject_txt" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@color/kus_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/notice_shimmer_category_txt"
        app:layout_constraintStart_toEndOf="@id/notice_shimmer_category_txt"
        app:layout_constraintTop_toTopOf="@+id/notice_shimmer_category_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>